<a href='/' class='button is-danger is-small' style='margin-bottom: 2em'>
    Back
</a>
<form action=<%= '/web/api/update/' + result.filename.replace(/\s+/g, '%20') + '?_method=PUT' %> method='POST' style="max-width: 500px">
    <% for(var j=0; j<fields.length; j++) {%>
        <div class='field'>
            <label class="label"><%= fields[j] %></label>
            <div class='control'>
                <input class='input' type='text' placeholder='<%= fields[j] %>' name='<%= fields[j] %>' value='<%= result[fields[j]] %>' disabled>
            </div>
        </div>
    <% } %>
    
</form>
<% if(extension != 'mp4') { %>
    <div>
        <img src='<%= '/' + idUser + '/' + filename  %>'    
    </div>
<% } else { %>
    <video controls autoplay>
        <source src='<%= '/' + idUser + '/' + filename  %>' type="video/mp4">
    </video> 
<% } %>