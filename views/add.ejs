</a>
<form id="frmUploader" enctype="multipart/form-data" action="/web/api/upload/" method="post">
    <div class="file has-name is-boxed">
        <label class="file-label">
            <input class="file-input" type="file" name="file" id="file" onchange="myFunction()">
            <span class="file-cta">
            <span class="file-icon">
                <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
                Choose a fileâ€¦
            </span>
            </span>
            <span class="file-name" id="namefile">
            </span>
        </label>
    </div>
    <br>
    <input type="submit" name="submit" class='button is-success is-small' value="Upload" />
</form>

<script type="text/javascript">
    function myFunction(){
        var filename = document.getElementById("file");
        document.getElementById("namefile").innerHTML=filename.value.replace(/^.*\\/, "");
    }
</script>